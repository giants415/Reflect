<!DOCTYPE html>
<html>
  <head>
    <title>Reflect</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/e1d67c9fed.js"></script>
  </head>

  <body>

    <% if current_user %>
      <%= render "layouts/navUser" %>
    <% else %>
      <%= render "layouts/navNoUser" %>
    <% end %>

    <%= yield %>

  </body>
</html>
