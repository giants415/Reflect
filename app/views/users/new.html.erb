<h3>Sign Up</h3>

<div>
  <h2><%= flash[:error] %></h2>
</div>

<%= form_for @user do |f| %>
  <div>
    <%= f.text_field :username, placeholder: "Choose a username" %>
  </div>
  <div>
    <%= f.text_field :email, placeholder: "Enter your email" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Choose a password" %>
  </div>
  <%= f.submit "Submit"%>
<% end %>
